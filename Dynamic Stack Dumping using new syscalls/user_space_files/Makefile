GALILEO_USER = root
GALILEO_IP = 192.168.1.5
FILE_LOCATION = /home/ravi/Desktop/EOSI/Fall_2018/Assignments/4/Fall-2018
IOT_HOME = /home/ravi/Desktop/EOSI/Fall_2018/Assignments/iot-devkit/1.7.2/sysroots
KERNEL = $(IOT_HOME)/i586-poky-linux/usr/src/kernel_header/kernel
PATH := $(PATH):$(IOT_HOME)/x86_64-pokysdk-linux/usr/bin/i586-poky-linux

APP = dumpmode_test
APP1 = signal_test
APP2 = kallsyms_test

all:
	i586-poky-linux-gcc -pthread -Wall -o $(APP) dumpmode_test.c 
	i586-poky-linux-gcc -pthread -Wall -o $(APP1) signal_test.c 
	i586-poky-linux-gcc -pthread -Wall -o $(APP2) kallsyms_lookup_test.c 
	rm -f *.o
	rm -f Module.symvers
	rm -f modules.order
	rm -f *.mod.c
	rm -f *.mod.o
	scp $(FILE_LOCATION)/dumpmode_test $(GALILEO_USER)@$(GALILEO_IP):/home/
	scp $(FILE_LOCATION)/signal_test $(GALILEO_USER)@$(GALILEO_IP):/home/
	scp $(FILE_LOCATION)/kallsyms_test $(GALILEO_USER)@$(GALILEO_IP):/home/

#Removes all the files generated by make all
clean:
	make ARCH=x86 CROSS_COMPILE=i586-poky-linux- -C $(KERNEL) M=$(PWD) clean
	rm -f $(APP)