GALILEO_USER = root
GALILEO_IP = 192.168.1.5
IOT_HOME = /home/ravi/Desktop/EOSI/Fall_2018/Assignments/iot-devkit/1.7.2/sysroots
KERNEL = $(IOT_HOME)/i586-poky-linux/usr/src/kernel_header/kernel
PATH := $(PATH):$(IOT_HOME)/x86_64-pokysdk-linux/usr/bin/i586-poky-linux

APP = led_test

obj-m += timer_delay_test.o ws2812.o

all:
	make ARCH=x86 CROSS_COMPILE=i586-poky-linux- -lgcc -C $(KERNEL) M=$(PWD) modules
	i586-poky-linux-gcc -pthread -Wall -o $(APP) main.c 
	rm -f *.o
	rm -f Module.symvers
	rm -f modules.order
	rm -f *.mod.c
	rm -f *.mod.o
	scp /home/ravi/Desktop/EOSI/Fall_2018/Assignments/3/Part_2/timer_delay_test.ko $(GALILEO_USER)@$(GALILEO_IP):/home/
	scp /home/ravi/Desktop/EOSI/Fall_2018/Assignments/3/Part_2/ws2812.ko $(GALILEO_USER)@$(GALILEO_IP):/home/
	scp /home/ravi/Desktop/EOSI/Fall_2018/Assignments/3/Part_2/led_test $(GALILEO_USER)@$(GALILEO_IP):/home/	

#Removes all the files generated by make all
clean:
	make ARCH=x86 CROSS_COMPILE=i586-poky-linux- -C $(KERNEL) M=$(PWD) clean
	rm -f $(APP)